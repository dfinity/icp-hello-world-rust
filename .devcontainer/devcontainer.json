{
    "name": "ICP Hello World Rust",
    "image": "ghcr.io/fxgst/icp-dev-env:release",
    "forwardPorts": [4943, 8080],
    "portsAttributes": {
        "4943": {
            "label": "dfx",
            "onAutoForward": "ignore"
        },
        "8080": {
            "label": "dev server",
            "onAutoForward": "openBrowser"
        }
    },
    "onCreateCommand": "nohup bash -c 'dfx start &' && cat nohup.out && rm nohup.out",
    "postCreateCommand": "mv /pocket-ic ./src/icp_hello_world_rust_backend",
    "postStartCommand": "npm install",
    "customizations": {
        "vscode": {
            "extensions": [
                "dfinity-foundation.vscode-motoko",
                "tamasfe.even-better-toml",
                "rust-lang.rust-analyzer"
            ]
        }
    }
}